generator client { 
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  image         String?
  passwordHash  String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  routes        SpeedrunRoute[]
  ratings       Rating[]
}

model SpeedrunRoute {
  id          String   @id @default(cuid())
  game        String?  
  title       String
  description String
  steps       Json
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [createdBy], references: [id])
  ratings     Rating[]

  @@index([createdAt])
  @@index([createdBy])
}

model Rating {
  id        String        @id @default(cuid())
  value     Int
  userId    String
  routeId   String

  user      User          @relation(fields: [userId], references: [id])
  route     SpeedrunRoute @relation(fields: [routeId], references: [id])

  createdAt DateTime      @default(now())

  @@unique([userId, routeId])
  @@index([routeId])
}
